		<div class="navigation">
			<div class="navigation__menu">
				<ul>
					<!-- Получает data из index.js -->
					<% data[0].forEach((el, index) => { %> <% if (el.link !== "consult")
					{%>
					<li class="menu__item">
						<a
							href="<%-el.link %>"
							class="<%if(index == 2 || index == 4) {%>innerLink<%}%>"
						>
							<!-- Выводим элементы меню в верхнем регистре первого элемента -->
